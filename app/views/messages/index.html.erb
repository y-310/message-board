<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
      <%= f.label  :name, "名前：", class: 'col-md-1' %>
    <div class="col-md-5">
      <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
    </div>
    <div class="col-md-6"></div>
  </div>
  <div class="form-group">
      <%= f.label  :body, "内容：", class: 'col-md-1'  %>
    <div class="col-md-11">
      <%= f.text_area :body, class: 'form-control', placeholder: "メッセージを書いてください", rows: 6 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>