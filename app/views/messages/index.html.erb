<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>名前</th>
            <th>年齢</th>
            <th>メッセージ</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
        </thead>
        <tbody>
        <% @messages.each do |message| %>
          <tr>
            <th scope="row"><%= message.id %></th>
            <td><span class="label label-info"><%= message.name %></span></td>
            <td><%= message.age %></td>
            <td><%= message.body %></td>
            <td><%= link_to "edit" , edit_message_path(message) %></td>
            <td><%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
          </tr>
        <% end %>
　　　　</tbody>
　　　</table>
　　</div>
  </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>
