<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
      <%= f.label  :name, "名前：", class: 'col-md-1' %>
    <div class="col-md-5">
      <%= f.text_field :name, class: 'form-control', placeholder: "名前" %>
    </div>
    <div class="col-md-6"></div>
  </div>
  <div class="form-group">
      <%= f.label  :age, "年齢：", class: 'col-md-1' %>
    <div class="col-md-1">
      <%= f.text_field :age, class: 'form-control', placeholder: "年齢" %> 
    </div>
    <div class="col-md-10"></div>
  </div>
  <div class="form-group">
      <%= f.label  :body, "内容：", class: 'col-md-1'  %>
    <div class="col-md-11">
      <%= f.text_area :body, class: 'form-control', placeholder: "メッセージを書いてください", rows: 6 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
